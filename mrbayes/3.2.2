module-whatis   "loads the mrbayes statistics package"

# for Tcl script use only
set     appname         mrbayes
set     version         3.2.2
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin

conflict	mrbayes

prepend-path    PATH            ${exec_prefix}

# mrbayes needs beagle (compiled against svn-r1253)
if { ![is-loaded beagle/svn-r1253] } {
	module load beagle/svn-r1253
}

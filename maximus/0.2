set version   0.2
set prefix    /export/apps/maximus/${version}
set exec_prefix   ${prefix}
set url "http://maximuspipeline.sourceforge.net/main/"
set msg "This module adds maximus v$version to various paths\n\nmaximus Official Site: $url\n"


proc ModulesHelp { } { 
  puts stderr "$msg"
}

module-whatis   "$msg"

conflict     maximus 

prepend-path  PATH    ${exec_prefix}

# maximus depends on mauve, load the mauve module as well 
      if { ![is-loaded mauve] } {
            module load mauve/2.3.1
         }       

# maximus depends on primer3, load the primer3 module as well
       if { ![is-loaded primer3] } {
			module load primer3/2.2.3 
		   }

# maximus depends on python2.6+, load the python2.6+ module as well
       if { ![is-loaded python] } {
            module load python/2.7.2
           }

# maximus depends on bwa, load the bwa module as well
       if { ![is-loaded bwa] } {
             module load bwa/0.5.9 
           }

# maximus depends on samtools, load the samtools module as well
       if { ![is-loaded samtools] } {
             module load samtools/0.1.17
           }

